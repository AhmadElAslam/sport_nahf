<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".a7in1">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView208"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/a7in1" />

            <ImageView
                android:id="@+id/imageView209"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/a7in1b" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView211"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/a7in1c" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView263"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="7 IN 1"
                    android:textColor="#DF2C2C"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView264"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:text="ספת כושר מתקפלת בקלות מתכווננת משיפוע שלילי עד 90 מעלות.\nמאפשרת מגוון רחב של תרגילים לכל שרירי הגוף.\n7 אפשרויות כוונון משענת גב משיפוע שלילי ועד 90 מעלות.\n"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView265"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:text='ריפודים עבים ונוחים מחומר מונע הזעה.\nעיצוב קומפקטי החוסך במקום ודורש שטח רצפה מינימלי.\nידית נשיאה להזזה קלה ממקום למקום. \nמייצבי בסיס. \nמשקל מתאמן מרבי: 100 ק"ג.\nמתקפלת בקלות לאחסנה נוחה. \nמידות:\nפתוח - אורך 126 ס"מ, רוחב 40 ס"מ, גובה 44.5-106 ס"מ.\nמקופל - אורך 123 ס"מ, רוחב 40 ס"מ, גובה 19.5 ס"מ.'
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView266"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="₪ 799"
            android:textColor="#E42C2C"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>