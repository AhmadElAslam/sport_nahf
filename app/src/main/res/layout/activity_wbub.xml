<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wbub">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView248"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/wbub1" />

            <ImageView
                android:id="@+id/imageView249"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/wbub2" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView342"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="WB-UB"
            android:textColor="#DC2A2A"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView343"
            android:layout_width="match_parent"
            android:layout_height="329dp"
            android:text='ספת כושר WB-UB מבית POWERTEC .\nספה מקצועית מתכווננת מזוית שלילית ועד 90 מעלות. \nקומפקטית בעלת עיצוב נמוך קרוב לרצפה לנוחות ויציבות בעבודה. \nניידת על גלגלים. \nמתאימה לכל סוגי האימון .  \n\nמידות: אורך 142 ס"מ, רוחב 68 ס"מ, גובה 45 ס"מ.'
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView344"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="₪ 2,199"
            android:textColor="#D53838"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>