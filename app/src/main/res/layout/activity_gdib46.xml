<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gdib46">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView250"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/gdib46a" />

            <ImageView
                android:id="@+id/imageView252"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/gdib46c" />

            <ImageView
                android:id="@+id/imageView251"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/gdib46b" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView345"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GDIB-46"
            android:textColor="#D62E2E"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView346"
            android:layout_width="match_parent"
            android:layout_height="316dp"
            android:text='ספה מקצועית אולימפית מתכווננת מזוית שלילית ועד זוית 90 מעלות לעבודת כתפיים.\nכני המוט מתכווננים בקלות ע"י פין קפיצי. \nריפודים עבים מחומר מונע הזעה . \nמתאימה לתרגילים רבים : עבודה עם משקולות חופשיים, דחיקה בזויות שונות,פושטי וכופפי ברכיים, עבודת סקווט ועוד..  \n\nמידות: אורך 190 ס"מ, רוחב 116 ס"מ.'
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView347"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="₪ 2,199"
            android:textColor="#D53232"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>