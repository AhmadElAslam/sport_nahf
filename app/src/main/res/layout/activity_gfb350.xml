<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gfb350">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView220"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/gfb350a" />

            <ImageView
                android:id="@+id/imageView221"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/gfb350b" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView294"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GFB-350"
            android:textColor="#D12C2C"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView295"
            android:layout_width="match_parent"
            android:layout_height="253dp"
            android:text='ספה שטוחה מקצועית מבית BODY SOLID מתאימה לחדר כושר או לשימוש ביתי.\nריפוד נח מחומר מונע הזעה. \nיציבה ומסיבית. \n\nמידות : אורך 116 ס"מ, רוחב 58 ס"מ, גובה 51 ס"מ.'
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView296"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="₪ 849"
            android:textColor="#DA3232"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>