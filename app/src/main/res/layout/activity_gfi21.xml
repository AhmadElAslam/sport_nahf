<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gfi21">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView235"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/gfi21a" />

            <ImageView
                android:id="@+id/imageView236"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/gfi21b" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView321"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GFI-21"
            android:textColor="#E63535"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView322"
            android:layout_width="match_parent"
            android:layout_height="282dp"
            android:text='ספה מקצועית מתאימה לחדר כושר או לשימוש ביתי.\nריפודים נוחים מחומר מונע הזעה. \nמתכווננת ממישור ועד 90 מעלות. \nמשענת ומושב מתכווננים. \nניידת על גלגלים.   \n\nמידות : אורך 132 ס"מ, רוחב 53 ס"מ, גובה 51 ס"מ.'
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView323"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="₪ 1,499"
            android:textColor="#DD3333"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>