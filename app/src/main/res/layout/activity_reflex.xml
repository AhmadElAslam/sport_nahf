<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reflex">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/reflexplus1" />

            <ImageView
                android:id="@+id/imageView68"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/reflexplus3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView69"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/reflexplus2" />

            <TextView
                android:id="@+id/textView46"
                android:layout_width="409dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text='מנוע שקט וחזק 6.5 כ"ס\n מהירות 0-16 קמ"ש, שיפוע חשמלי 0-10%\n מסילה ריצה גדולה באורך 121 ס"מ וברוחב 42 ס"מ. \n 8 בולמי זעזועים אקטיביים להגנה על הברכיים\n מד דופק מובנה הכולל חיישנים בידיות המכשיר'
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView52"
            android:layout_width="match_parent"
            android:layout_height="322dp"
            android:text='צג LCD עם תאורה כחולה המציג את כל נתוני האימון בו זמנית \n 12 תוכניות אימון מקצועיות לשיפור הכושר והפחתת משקל + תוכנית ידנית. \n עיצוב חדשני ומהודר, מתקפל ונייד על גלגלים.  \n צג מואר עם תצוגת מהירות, מרחק, שיפוע, זמן, שריפת קלוריות, דופק. \n משטח ריצה גמיש במיוחד עם מנגנון מירכוז אוטומטי למסילה.  \n מתאים למשתמשים עד 120 ק"ג. \n אחריות: 5 שנים למנוע, 12 חודשים למכשיר. \n \n מידות: \n פתוח - אורך 159 ס"מ, רוחב 72 ס"מ, גובה 130 ס"מ\n מקופל - אורך 75 ס"מ, רוחב 72 ס"מ, גובה 146 ס"מ'
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView95"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="₪ 3,799"
            android:textColor="#DF4242"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>